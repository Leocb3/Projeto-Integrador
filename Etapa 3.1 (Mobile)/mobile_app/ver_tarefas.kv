<VerTarefasScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        ScrollView:
            BoxLayout:
                id: tarefas_container
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height

        Button:
            text: "Criar Tarefa"
            on_press: app.root.current = "criar_tarefa"

        Button:
            text: "Voltar"
            on_press: app.root.current = "dashboard"
