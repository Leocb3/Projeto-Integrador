<DashboardScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "Dashboard"
            font_size: 24

        Button:
            text: "Ver Tarefas"
            on_press: app.root.current = "ver_tarefas"

        Button:
            text: "Criar Tarefa"
            on_press: app.root.current = "criar_tarefa"

        Button:
            text: "Sair"
            on_press: app.root.current = "login"
