<EditarTarefasScreen>:
    name: "editar_tarefas"
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "Editar Tarefas"
            font_size: 24
            size_hint_y: None
            height: 50

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            BoxLayout:
                id: editar_box
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height

        Button:
            text: "Voltar"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "agenda"
