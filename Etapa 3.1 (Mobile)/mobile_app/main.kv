<AppManager>:
    MainScreen:
    LoginScreen:
    RegisterScreen:
    DashboardScreen:

<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(50)

        # Título do aplicativo
        BoxLayout:
            size_hint_y: 0.2
            Label:
                text: "[b]Calendar Quest[/b]"  # Nome do app
                font_size: '32sp'
                markup: True
                halign: 'center'
                valign: 'middle'

        # Mensagem inicial
        Label:
            text: "Bem-vindo ao aplicativo! Você já tem cadastro?"
            font_size: '24sp'
            halign: 'center'
            valign: 'middle'

        # Botões de navegação
        Button:
            text: "Sim, já tenho cadastro"
            size_hint: (1, 0.3)
            on_release: app.root.current = 'login'

        Button:
            text: "Não, quero me cadastrar"
            size_hint: (1, 0.3)
            on_release: app.root.current = 'register'
